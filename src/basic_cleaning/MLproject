name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: Input artifact containing raw data to be cleaned
        type: string

      output_artifact:
        description: Name for the output artifact after cleaning
        type: string

      output_type:
        description: Type of the output artifact (e.g., clean_data)
        type: string

      output_description:
        description: Description for the output artifact
        type: string

      min_price:
        description: Minimum price to filter the data (in dollars)
        type: float

      max_price:
        description: Maximum price to filter the data (in dollars)
        type: float

    command: >-
        python run.py  --input_artifact {input_artifact}  --output_artifact {output_artifact}  --output_type {output_type}  --output_description {output_description}  --min_price {min_price}  --max_price {max_price} 
